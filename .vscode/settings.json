{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.idea": true,
    "**/backup_data": true,
    "**/__pycache__": true,
    "**/langchain_pepwave_env": true
  },
  "search.exclude": {
    ".vscode": true,
    "data": true,
    "**/langchain_pepwave_env": true,
    "*.parquet": true,
    "**/venv": true
  },
  "editor.wordWrapColumn": 120,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "pythonTestExplorer.testFramework": "pytest",
  "wolf.disableHotModeWarning": true
}
